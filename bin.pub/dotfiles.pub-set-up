#!/usr/bin/env bash

cd

repo=dotfiles.pub

# create symlinks from user's bin to all scripts in bin.pub
for item in bin.pub ; do
    ln -vsf ~/$repo/$item ~/bin
done

# create symlinks from user's home dir to config files in repo
for item in .profile .gitignore '.z*' '.bash*'; do
    ln -vsf ~/$repo/$item ~/
done
