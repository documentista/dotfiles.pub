#!/bin/bash

cd

repo=.dotfiles.pub

for item in bin.pub .abcde.conf .weechat '.bash*' '.vim*' .tmux.conf .inputrc; do
    ln -vsf ~/$repo/$item ~/
done

ln -vsf ~/$repo/.gitconfig ~/
ln -vsf ~/$repo/.gitignore ~/

mkdir -p ~/.lein
ln -vsf ~/$repo/.lein/profiles.clj ~/.lein/

mkdir -p ~/.emacs.d
ln -vsf ~/$repo/.emacs.d/init.el ~/.emacs.d/

mkdir -p ~/.i3
ln -vsf ~/$repo/.i3/config ~/.i3/
